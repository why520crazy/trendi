{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/cjs",
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2022", "Decorators", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {},
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "tmp", "test"]
}
